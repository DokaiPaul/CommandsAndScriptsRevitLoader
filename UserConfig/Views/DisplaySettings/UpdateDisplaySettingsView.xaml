<ui:FluentWindow x:Class="R2022.UserConfig.Views.DisplaySettings.UpdateDisplaySettingsView"
                 DataContext="{Binding RelativeSource={RelativeSource Self}}"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:R2022.UserConfig.Views.DisplaySettings"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Auto"
                 Width="740" Height="400" MinWidth="200" MinHeight="250"
                 WindowStartupLocation="CenterScreen"
                 ShowInTaskbar="False"
                 mc:Ignorable="d">

    <StackPanel>
        <ui:TitleBar Title="Display settings"></ui:TitleBar>

        <ui:Card Margin="8">
            <ui:Button Content="Change theme"
                       Command="{Binding CommandChangeTheme}"
                       Icon="{ui:SymbolIcon DarkTheme24}"
                       MouseOverBackground="{Binding AddItemBackground}"/>
        </ui:Card>
    </StackPanel>

</ui:FluentWindow>